
@{
    var temp = TempData["ReturnUrl"]; // temp is null on all partials except the first
}
<script>

    toastr.options = {
        closeButton: true,
        debug: false,
        positionClass: "toast-top-full-width",
        onclick: null,
        showDuration: "300",
        hideDuration: "1000",
        timeOut: "5000",
        extendedTimeOut: "1000",
        showEasing: "swing",
        hideEasing: "linear",
        showMethod: "fadeIn",
        hideMethod: "fadeOut"
    }

</script>

@if (TempData.ContainsKey("ADD_SUCESS"))
{
    <script>
        window.onload = () => {
            $(document).ready(function () {
