@model RookieShop.Shared.ViewModel.OrderVm
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container mt-3 mt-md-5">
    <h2 class="text-charcoal hidden-sm-down">Your Orders</h2>

    <div class="row">
        <div class="col-12">
            <div class="list-group mb-5">
                <div class="list-group-item p-3 bg-snow" style="position: relative;">
                    <div class="row w-100 no-gutters">
                        <div class="col-6 col-md">
                            <h6 class="text-charcoal mb-0 w-100">Order Number</h6>
                            <a href="" class="text-pebble mb-0 w-100 mb-2 mb-md-0">#@Model.Id</a>
                        </div>
                        <div class="col-6 col-md">
                            <h6 class="text-charcoal mb-0 w-100">Date</h6>
                            <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">@Model.Date</p>
                        </div>
                        <div class="col-6 col-md">
                            <h6 class="text-charcoal mb-0 w-100">Total</h6>
                            <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">$ @Model.Total</p>
                        </div>
                        <div class="col-6 col-md">
                            <h6 class="text-charcoal mb-0 w-100">Shipped To</h6>
                            <p class="text-pebble mb-0 w-100 mb-2 mb-md-0">@Model.UserAddress</p>
                        </div>

                    </div>

                </div>
                <div class="list-group-item p-3 bg-white">
                    <div class="row">
                        @for (int i = 0; i < Model.ProductName.Count; i++)
                        {

                        <div class="col-3 col-md-1 img-product">
                            <img class="img-fluid pr-3" src="@Model.ImageDefault.ToList()[i]" alt="">
                        </div>
                        <div class="col-9 col-md-8 pr-0 pr-md-3">
                            <h6 class="text-charcoal mb-2 mb-md-1">
                                <a href="@Url.Action("Details","Product",new { id = Model.ProductID[i] })" class="text-charcoal">@Model.Quantity[i]  x @Model.ProductName[i]</a>

                            </h6>
                            <ul class="list-unstyled text-pebble mb-2 small">
                                <li class="">
                                    <b>Sub Total:</b>  @Convert.ToDecimal(Convert.ToInt32(@Model.Quantity[i]) * @Convert.ToDecimal(@Model.UnitPrice[i]))
                                </li>

                            </ul>
                        </div>
                        <div class="col-12 col-md-3 hidden-sm-down">

                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="apply_coupon">
                <div class="row">
                    <div class="col-12 text-left">
                        <a href="##" onClick="history.go(-1); return false;" class="btn btn-warning">GO BACK</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>