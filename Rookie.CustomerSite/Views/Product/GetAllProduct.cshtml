

@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common
@using X.PagedList.Mvc.Bootstrap4

<div class="portfolio-section">
    <div class="container">
        <div class="row">

            <!-- START PORTFOLIO HEADING -->
            <div class="col-12">
                <div class="portfolioHeading text-center">
                    <h1 class="high-lighted-heading">Our Popular Product</h1>
                </div>
            </div>
            <!-- END PORTFOLIO HEADING -->
            <!-- START FILTERS -->
            @await Component.InvokeAsync("CategoryMenu")
        </div>
        <!-- END FILTERS -->
        <!-- START PORTFOLIO IMAGES -->
        <div class="col-12">
            <div id="js-grid-blog-posts" class="cbp">
                @foreach (var item in ViewBag.OnePageOfProducts)
                {
                    <div class="cbp-item Classic Fantasy">
                        <a class="portfolio-circle-cart" href="@Url.Action("AddProduct","Cart", new { id = item.ProductId})">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                        <div class="img-fluid">
                            <div class="item"> <a href="#" class="cbp-caption" data-fancybox="gallery1" data-title="Book 1"><img src="@item.ImgDefault" alt="#" style="max-height:340px; max-width:340px"></a></div>

                        </div>
                        <div class="row">
                            <div class="col-12 text-center">
                                <div class="cbp-l-grid-blog-title"><a href="@Url.Action("Details","Product",new { id = item.ProductId })" target="_blank" class="portfolio-title">@item.ProductName</a></div>
                            </div>
                            <div class="col-12 text-center">
                                <div class="cbp-l-grid-blog-desc portfolio-des">$ @item.UnitPrice</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("GetAllProduct", new { page }), new X.PagedList.Web.Common.PagedListRenderOptionsBase
       {

           LiElementClasses = new string[] { "page-item" },
           PageClasses = new string[] { "page-link" },

       })
        </div>
        <!-- END PORTFOLIO IMAGES -->

    </div>
</div>
    </div>
<!--START BANNER SECTION-->
<div class="banner-section parallax-slide">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6 text-center text-lg-left">
                <div class="banner-content-wrapper">
                    <span>TRENDING PRODUCT OF THE WEEK</span>
                    <h1>Books <span>Collections</span></h1>
                    <p>Aenean imperdiet. Etiam ultricies nisi vel augue men tuhi spectrum alle me</p>
                    <button type="button" class="btn green-color-yellow-gradient-btn">BUY NOW</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END BANNER SECTION-->
<!--START SEARCH AREA-->
<div class="search-box-overlay">
    <a><i class="fas fa-times cross-sign" id="close-window"></i></a>

    <div class="container">
        <div class="row">
            <div class="col-12 search-col">
                <form action="javascript:void(0)">
                    <div class="input-group search-box-form">
                        <input type="text" class="form-control" placeholder="Search Here" aria-label="Search Here">
                        <div class="input-group-prepend">
                            <button class="input-group-text" type="submit" id="basic-addon1">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-12">
                <hr>
            </div>
        </div>
    </div>

</div>
<!--END SEARCH AREA -->
