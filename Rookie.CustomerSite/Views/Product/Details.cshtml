@model RookieShop.Shared.ViewModel.ProductDetailsVM
@{
    ViewData["Title"] = "DetailsAsync";
}

<!-- START HEADING SECTION -->
<div class="about_content">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <div class="product-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb text-center text-lg-left">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Categories</a></li>
                            <li class="breadcrumb-item" aria-current="page"><a href="javascript:void(0)">Books</a></li>
                            <li class="breadcrumb-item"><a class="active" href="javascript:void(0)">The Road</a></li>
                        </ol>
                    </nav>
                    <div class="pro-detail-sec row">
                        <div class="col-12">
                            <h4 class="pro-heading text-center text-lg-left">Books  Collections</h4>
                            <p class="pro-text text-center text-lg-left">Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit.</p>
                        </div>
                    </div>
                    <div class="row product-list product-detail">

                        <div class="col-12 col-lg-6 product-detail-slider">
                            <div class="wrapper">
                                <div class="Gallery swiper-container img-magnifier-container" id="gallery">
                                    <div class="swiper-wrapper myimgs">
                                        <div class="swiper-slide"> <a href="@Model.pathName[0]" data-fancybox="1" title="Zoom In"><img class="myimage" src="@Model.pathName[0]" alt="gallery"></a></div>
                                        <div class="swiper-slide"> <a href="~/book-shop/img/book-1.jpg" data-fancybox="2" title="Zoom In"><img class="myimage" src="~/book-shop/img/book-1.jpg" alt="thumnails"></a></div>
                                        <div class="swiper-slide"> <a href="~/book-shop/img/book-1-2.jpg" data-fancybox="3" title="Zoom In"><img class="myimage" src="~/book-shop/img/book-1-2.jpg" alt="thumnails"></a></div>
                                    </div>
                                </div>
                                <div class="Thumbs swiper-container" id="thumbs">
                                    <div class="swiper-wrapper">
                                        <div class="swiper-slide"> <img src="~/book-shop/img/book-1-1.jpg" alt="thumnails"></div>
                                        <div class="swiper-slide"> <img src="~/book-shop/img/book-1.jpg" alt="thumnails"></div>
                                        <div class="swiper-slide"> <img src="~/book-shop/img/book-1-2.jpg" alt="thumnails"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 text-center text-lg-left">
                            <div class="share-product-details">
                                <ul class="user-rating">
                                    @for (var i = 1; i <= 5; i++)
                                    {
                                        if (Model.rating < i)
                                        {
                                            if ((Math.Round(Model.rating, 1) == i))
                                            {
                                                <li><a href="#"><i class="lni lni-star-half"></i></a></li>


                                            }
                                            else
                                            {
                                                <li><a href="#"><i class="lni lni-star"></i></a></li>
                                                
                                            }
                                        }
                                        else
                                        {
                                            <li><a href="#"><i class="lni-star-filled"></i></a></li>
                                        }
                                    }
                                    
                                </ul>
                            </div>
                            <div class="product-single-price">
                                <h4><span class="real-price">@Model.unitPrice</span> <span><del>$450</del></span></h4>
                                <p class="pro-description">@Model.description</p>
                            </div>

                            <div class="product-checklist">
                                <ul>
                                    <li><i class="fas fa-check"></i> Satisfaction 100% Guaranteed</li>
                                    <li><i class="fas fa-check"></i> free shipping on orders over $99</li>
                                    <li><i class="fas fa-check"></i> 14 days easy Return</li>
                                </ul>
                            </div>

                            <div class="row product-quantity input_plus_mins no-gutters" style="background-color:#dddddd">
                                @using (Html.BeginForm("Add", "Cart", FormMethod.Post))
                                {
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <input type="hidden" placeholder="1" value="false" name="isUpdate">
                                    <div class="qty col-12 col-lg-3 d-lg-flex  align-items-lg-center d-inline-block">
                                        <span class="minus bg-dark"><i class="lni-minus"></i></span>
                                        <input type="number" class="count" name="quantity" value="1">
                                        <span class="plus bg-dark"><i class="lni-plus"></i></span>
                                    </div>
                                    <div class="col-12 col-lg-9">
                                        <button type="submit" class="btn green-color-yellow-gradient-btn">ADD TO CART</button>
                                    </div>

                                }
                            </div>

                            <div class="dropdown-divider"></div>

                            <div class="product-tags-list">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><p class="d-inline">SKU: <span>@Model.Id</span></p></li>
                                        <li class="breadcrumb-item"><span class="d-inline">Categories: <a href="javascript:void(0)">Classic</a><span class="comma-separtor">,</span><a href="javascript:void(0)">@Model.categoryName</a></span></li>
                                        <li class="breadcrumb-item" aria-current="page"><p class="d-inline">Tags: <a href="javascript:void(0)">Fantasy</a><span class="comma-separtor">,</span><a href="javascript:void(0)">@Model.providerId</a></p></li>
                                    </ol>
                                </nav>
                            </div>

                            <div class="share-product-details">
                                <ul class="share-product-icons">
                                    <li><p>Share Link:</p></li>
                                    <li><a href="javascript:void(0)" class="facebook-bg-hvr"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
                                    <li><a href="javascript:void(0)" class="twitter-bg-hvr"><i class="fab fa-twitter" aria-hidden="true"></i></a> </li>
                                    <li><a href="javascript:void(0)" class="linkedin-bg-hvr"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a></li>
                                    <li><a href="javascript:void(0)" class="instagram-bg-hvr"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-12 mt-4 mb-4">
                            <div class="row no-gutters product-all-details">

                                <ul class="col-12 nav nav-tabs" id="myTab" role="tablist">


                                    <li class="col-4 nav-item">
                                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="true">Customer Reviews  (2)</a>
                                    </li>
                                </ul>
                                <div class="col-12 tab-content" id="myTabContent">

                                    <div class="tab-pane fade reviews" id="contact" role="tabpanel" aria-labelledby="contact-tab">

                                        <div class="media">
                                            <div class="row no-gutter">
                                                @for (int i = 0; i < Model.userId.Count; i++)
                                                {
                                                    <div class="col-12 col-lg-2 p-0">

                                                        <div class="row no-gutters">
                                                            <div class="col-12 d-flex  justify-content-center">
                                                                <img src="img/user.jpg">
                                                            </div>

                                                        </div>

                                                    </div>

                                                    <div class="col-12 col-lg-10 p-0">
                                                        <div class="media-body">
                                                            <span class="text-center text-lg-left">@Model.dateRated[i]</span>
                                                            <h5 class="mb-2 text-center text-lg-left">@Model.userId[i]</h5>
                                                           
                                                            <ul class="user-rating">

                                                                @for (int j = 0; j < 5; j++)
                                                                {
                                                                    if (Model.numberRating[i] > j)
                                                                    {
                                                                        <li><a href="#"><i class="lni-star-filled"></i></a></li>
                                                                    }
                                                                    else
                                                                    {
                                                                        <li><a href="#"><i class="lni lni-star"></i></a></li>
                                                                    }


                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                }


                                            </div>
                                        </div>
                                      

                                    
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>



</div>

